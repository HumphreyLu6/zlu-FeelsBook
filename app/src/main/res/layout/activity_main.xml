<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/oldFeels"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/love_button"
        android:layout_width="97dp"
        android:layout_height="60dp"
        android:onClick="lovePressed"
        android:text="love"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/suprise_button"
        app:layout_constraintEnd_toStartOf="@+id/joy_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/joy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="joyPressed"
        android:text="joy"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/anger_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/love_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/suprise_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:onClick="surprisePressed"
        android:text="surprise"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/sadness_button"
        app:layout_constraintEnd_toStartOf="@+id/anger_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/love_button" />

    <Button
        android:id="@+id/anger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="angerPressed"
        android:text="anger"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fear_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/suprise_button"
        app:layout_constraintTop_toBottomOf="@+id/joy_button" />

    <Button
        android:id="@+id/sadness_button"
        android:layout_width="177dp"
        android:layout_height="60dp"
        android:onClick="sadnessPressed"
        android:text="sadness"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/history_button"
        app:layout_constraintEnd_toStartOf="@+id/fear_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suprise_button" />

    <Button
        android:id="@+id/fear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="fearPressed"
        android:text="fear"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/counts_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sadness_button"
        app:layout_constraintTop_toBottomOf="@+id/anger_button" />

    <Button
        android:id="@+id/history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="208dp"
        android:text="History"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/counts_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sadness_button" />

    <Button
        android:id="@+id/counts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="95dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="95dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="207dp"
        android:text="Counts"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/history_button"
        app:layout_constraintTop_toBottomOf="@+id/fear_button" />

</android.support.constraint.ConstraintLayout>